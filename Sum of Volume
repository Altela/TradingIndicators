//@version=5
indicator("Bandarmology", format=format.volume)

select = input(1)
initialVolume = volume[select]

BuyVolume = volume*((close-low)/(high-low))
SellVolume = volume*((high-close)/(high-low))
SumVolume = initialVolume-SellVolume+BuyVolume
plot(SumVolume, style=plot.style_columns)
